@model commerce.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="row ">
    <div class="col-lg-12">
        <h3>Welcome, @Model.UserName.</h3>

    </div>
</div>


<div class="jumbotron">
    <div class="row ">
        <div class="col-12 col-lg-4 col-md-2  ml-lg-auto homeCard">
            <div class="card text-white bg-info mb-3 d-flex ">
                <div class="card-header">@Html.DisplayNameFor(model => model.CustomersCount)</div>
                <div class="card-body text-center">
                    <h5 class="card-title">We have:</h5>
                    <p class="card-text">
                        @Html.ActionLink(Model.CustomersCount + " " +
                                         Html.DisplayNameFor(model => model.CustomersCount),
                            "Index", new { controller = "Customers" },
                            htmlAttributes: new { @class = "  btn btn-info text-nowrap" })
                    </p>

                </div>

            </div>
        </div>

        <div class="col-12 col-lg-4  col-md-2 homeCard">
            <div class="card text-white bg-primary mb-3 d-flex  ">
                <div class="card-header">@Html.DisplayNameFor(model => model.ProductsCount)</div>

                <div class="card-body text-center">
                    <h5 class="card-title ">We have:</h5>
                    <p class="card-text">
                        @Html.ActionLink(Model.ProductsCount + " " +
                                         Html.DisplayNameFor(model => model.ProductsCount),
                            "Index", new { controller = "Products" },
                            htmlAttributes: new { @class = "  btn btn-primary text-nowrap" })
                    </p>

                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 col-md-2 homeCard mr-lg-auto">

            <div class="card text-white bg-success mb-3 d-flex ">
                <div class="card-header">
                    @Html.DisplayNameFor(model => model.CategoriesCount).
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">We have:</h5>
                    <p class="card-text">

                        @Html.ActionLink(Model.CategoriesCount + " " +
                                         Html.DisplayNameFor(model => model.CategoriesCount),
                            "Index", new { controller = "Categories" },
                            htmlAttributes: new { @class = "  btn btn-success text-nowrap" })
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-6  col-md-2 ml-lg-auto homeCard">

            <div class="card text-white bg-danger mb-3 d-flex ">
                <div class="card-header">@Html.DisplayNameFor(model => model.OrdersCount)</div>
                <div class="card-body text-center">
                    <h5 class="card-title">We have:</h5>
                    <p class="card-text">
                        @Html.ActionLink(Model.OrdersCount + " " +
                                         Html.DisplayNameFor(model => model.OrdersCount),
                            "Index", new { controller = "Orders" },
                            htmlAttributes: new { @class = "  btn btn-danger text-nowrap" })
                    </p>
                </div>
            </div>
        </div>


        <div class="col-12 col-lg-6 col-md-2 mr-lg-auto homeCard">

            <div class="card text-white bg-dark mb-3 d-flex ">
                <div class="card-header">@Html.DisplayNameFor(model => model.CouponsCount)</div>

                <div class="card-body text-center">
                    <h5 class="card-title">We have:</h5>
                    <p class="card-text">
                        @Html.ActionLink(Model.CouponsCount + " " +
                                         Html.DisplayNameFor(model => model.CouponsCount),
                            "Index", new { controller = "Coupons" },
                            htmlAttributes: new { @class = "  btn btn-dark text-nowrap" })
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

