@model commerce.Models.Product

@{
    ViewBag.Title = "Delete";

    string NoInfo(string n)
    {
        return string.IsNullOrEmpty(n) ? "No information given" : n;
    }
}
<div class="row">
    <div class=" col text-center">
        <h3>Delete item: @Model.Name</h3>
        <hr />

    </div>
</div>




<table class="table table-bordered text-center col">
    <thead class="table-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductStatus.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegularPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedTime)
            </th>
        </tr>
    </thead>
    <tbody class="table-danger">
        <tr>
            <td>
                @NoInfo(Html.DisplayFor(model => model.Name).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.ProductStatus.Name).ToString())
            </td>

            <td>
                @NoInfo(Html.DisplayFor(model => model.Description).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.RegularPrice).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.DiscountPrice).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.Quantity).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.CreatedBy).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.UpdatedBy).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.CreationTime).ToString())
            </td>
            <td>
                @NoInfo(Html.DisplayFor(model => model.UpdatedTime).ToString())
            </td>
        </tr>
    </tbody>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" row justify-content-around ">
        <div class="col-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
        <div class="col-4 ">
            @Html.ActionLink("Back to List", "Index", null,
                htmlAttributes: new { @class = "btn btn-outline-secondary " })
        </div>

    </div>
}
